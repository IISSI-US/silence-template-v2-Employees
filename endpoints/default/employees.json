{
    "getAll": {
        "route": "/employees",
        "method": "GET",
        "sql": "SELECT * FROM employees",
        "auth_required": false,
        "allowed_roles": [
            "*"
        ],
        "description": "Gets all employees"
    },
    "getById": {
        "route": "/employees/$employeeId",
        "method": "GET",
        "sql": "SELECT * FROM employees WHERE employeeId = $employeeId",
        "auth_required": false,
        "allowed_roles": [
            "*"
        ],
        "description": "Gets a employees with corresponding primary key"
    },
    "create": {
        "route": "/employees",
        "method": "POST",
        "sql": "INSERT INTO employees(email, password, departmentId, bossId, firstName, lastName, salary) VALUES ($email, $password, $departmentId, $bossId, $firstName, $lastName, $salary)",
        "auth_required": true,
        "allowed_roles": [
            "*"
        ],
        "description": "creates a new employees",
        "request_body_params": [
            "email",
            "password",
            "departmentId",
            "bossId",
            "firstName",
            "lastName",
            "salary"
        ]
    },
    "update": {
        "route": "/employees/$employeeId",
        "method": "PUT",
        "sql": "UPDATE employees SET email = $email, password = $password, departmentId = $departmentId, bossId = $bossId, firstName = $firstName, lastName = $lastName, salary = $salary WHERE employeeId = $employeeId",
        "auth_required": true,
        "allowed_roles": [
            "*"
        ],
        "description": "updates an existing employees with corresponding primary key",
        "request_body_params": [
            "email",
            "password",
            "departmentId",
            "bossId",
            "firstName",
            "lastName",
            "salary"
        ]
    },
    "delete": {
        "route": "/employees/$employeeId",
        "method": "DELETE",
        "sql": "DELETE FROM employees WHERE employeeId = $employeeId",
        "auth_required": true,
        "allowed_roles": [
            "*"
        ],
        "description": "deletes an existing employees with corresponding primary key"
    }
}